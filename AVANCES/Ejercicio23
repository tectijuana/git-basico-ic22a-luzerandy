num1=int(input("Introduza el primer número entero"))
print ("")
num2=int(input("Introduza el segundo número entero"))

if num1%2==0:
    pass
    if num2%2==0:
        suma=int(num1+num2)
        print("Suma de numeros pares: ",suma)
    else:
        print("Ambos son impares")
else:
    pass
    if num1%2==0:
        print("Suma de numeros pares: ",num1)
    else:
        print("Suma de numeros pares: ",num2)
print("¡Hecho!")
